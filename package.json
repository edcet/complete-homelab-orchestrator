{
  "name": "@homelab/complete-orchestrator",
  "version": "2.2.0",
  "description": "Complete homelab orchestration with Pangolin, Tailscale, Cloudflare, Setec, and MCP integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "homelab": "./dist/bin/cli.js",
    "hlctl": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/bin/cli.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "prepack": "npm run build && npm run test",
    "release": "semantic-release",
    "docker:build": "docker build -t homelab-orchestrator:latest .",
    "docker:run": "docker run -it homelab-orchestrator:latest"
  },
  "keywords": [
    "homelab", "infrastructure", "automation", "pulumi", "mcp", "pangolin",
    "tailscale", "cloudflare", "setec", "yunohost", "olares", "casaos",
    "docker", "kubernetes", "devops", "self-hosted", "newt", "olm", "gerbil"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/edcet/complete-homelab-orchestrator.git"
  },
  "bugs": {
    "url": "https://github.com/edcet/complete-homelab-orchestrator/issues"
  },
  "homepage": "https://github.com/edcet/complete-homelab-orchestrator#readme",
  "author": "Homelab Orchestrator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": ["linux", "darwin"],
  "dependencies": {
    "@pulumi/pulumi": "^3.95.0",
    "@pulumi/docker": "^4.5.1",
    "@pulumi/cloudflare": "^5.15.0",
    "@pulumi/command": "^0.9.2",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.11",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "axios": "^1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/inquirer": "^9.0.7",
    "@types/ws": "^8.5.8",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "semantic-release": "^22.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*.ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}